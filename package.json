{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "utilities",
  "type": "module",
  "scripts": {
    "test": "dotenvx run -- vitest run",
    "build": "turbo run build --concurrency=4",
    "lint": "turbo run lint --concurrency=4",
    "format": "turbo run format --concurrency=4",
    "check-update": "turbo run check-update --concurrency=4",
    "prepare": "husky",
    "update": "pnpm --recursive update --interactive",
    "update:latest": "pnpm --recursive update --interactive --latest"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rygent/utilities.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-angular": "^19.7.1",
    "@dotenvx/dotenvx": "^1.37.0",
    "@sapphire/node-utilities": "^1.0.2",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^2.1.9",
    "colorette": "^2.0.20",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-terrax": "^0.3.4",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lodash.merge": "^4.6.2",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.6"
}
