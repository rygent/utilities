{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "utilities",
  "type": "module",
  "scripts": {
    "test": "dotenvx run -- vitest run",
    "build": "turbo run build --concurrency=4",
    "lint": "turbo run lint --concurrency=4",
    "format": "turbo run format --concurrency=4",
    "check-update": "turbo run check-update --concurrency=4",
    "prepare": "husky",
    "update": "pnpm --recursive update --interactive",
    "update:latest": "pnpm --recursive update --interactive --latest"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rygent/utilities.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-angular": "^19.8.1",
    "@dotenvx/dotenvx": "^1.44.2",
    "@sapphire/node-utilities": "^1.0.2",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.15.32",
    "@vitest/coverage-v8": "^3.2.3",
    "colorette": "^2.0.20",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-terrax": "^0.4.0",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lodash.merge": "^4.6.2",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.3"
  },
  "packageManager": "pnpm@10.12.1"
}
